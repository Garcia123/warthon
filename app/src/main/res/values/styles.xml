<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="loginTheme" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:windowBackground">@color/primaryDarkColor</item>
        <item name="editTextColor">@color/primaryTextColor</item>
        <item name="colorAccent">@color/secondaryLightColor</item>
        <item name="colorControlNormal">@color/secondaryLightColor</item>
        <item name="android:colorForeground">@color/secondaryLightColor</item>
        <item name="android:textColorHint">@color/secondaryLightColor</item>
    </style>

    <style name="RegistarTheme" parent="AppTheme">
        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="android:textColorHint">@color/secondaryDarkColor</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
